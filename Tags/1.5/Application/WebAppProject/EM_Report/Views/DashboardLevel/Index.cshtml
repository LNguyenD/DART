@model List<EM_Report.Domain.Dashboard_Levels>
@using EM_Report.Common.Utilities;
@using EM_Report.Helpers;

@{
    ViewBag.Title = "Dashboards";
    ViewBag.Heading = "Report >> DashBoard Level list";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Master.cshtml";
}
@if (EM_Report.Helpers.Base.LoginSession.isSystemUser)
{  
    <div class="wrapper">
   @using (Ajax.BeginForm("Index", new AjaxOptions { UpdateTargetId = "content", OnBegin = "showLoading", OnComplete = "hideLoading" }))
   {
       @Html.AntiForgeryToken()
       <link href="@Url.ContentV("~/Css/jquery.selectbox.css")" rel="stylesheet" type="text/css" />        
       <script type="text/javascript" src="@Url.ContentV("~/scripts/custom_javascript.js")"></script> 
       <script src="@Url.ContentV("~/scripts/iReport.js")" type="text/javascript"></script>
       <link href="@Url.ContentV("~/Css/report.css")" rel="stylesheet" type="text/css" />
        @Html.Partial("_SearchBar")
        <div class="w_100p">
            @using (Html.BeginForm())
            {
                <div class="formWrap">
                    <h1>Dashboard Level List</h1>
                    <table name="tbGrid" cellspacing="0" cellpadding="0" class="tbl">
                        <thead>
                            <tr>                                                                  
                                <th class="col_3 first center"><input type="checkbox" name="chkAll" /></th>
                                <td sortby="Name" sortdir="" class="col_30"><span class="css_right ui-icon ui-icon-carat-2-n-s"></span>Level Name</td>
                                <td sortby="Description" sortdir="" class="col_35"><span class="css_right ui-icon ui-icon-carat-2-n-s"></span>description</td>
                                <td class="col_10 center" sortby="StatusName" sortdir=""><span class="css_right ui-icon ui-icon-carat-2-n-s"></span>status</td>
                                <td class="col_10 center" sortby="Create_Date" sortdir=""><span class="css_right ui-icon ui-icon-carat-2-n-s"></span>@EM_Report.Domain.Resources.Resource.txtCreatedOn</td>
                                <td sortby="OwnerName" sortdir="" class="col_10"><span class="css_right ui-icon ui-icon-carat-2-n-s"></span>@EM_Report.Domain.Resources.Resource.txtOwner</td>            
                            </tr>
                        </thead>
                        @if (!ViewData.Model.IsNullOrEmpty())
                        {
                            var i = 1;
                            <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="@(i % 2 == 0 ? "even" : "odd")">
                                            <th><input type="checkbox" name="chkItem" value="@(item.DashboardLevelId)" id="chkId@(item.DashboardLevelId)"/></th>
                                            <td title="@item.Name"><a href="@Url.Action("details", "DashboardLevel", new { id = item.DashboardLevelId })"></a></td>
                                            <td title="@item.Description"></td>                                       
                                            <td title="@item.Status" class="center">@item.StatusName</td>
                                            <td title="@(Base.GetDatetimeText(item.Create_Date))" class="center" style="width:12%;">@(Base.GetDatetimeText(item.Create_Date))</td>
                                            <td title="@(item.OwnerName)" style="width:10%;">@(item.OwnerName)</td>                                    
                                         </tr>                           
                                        i++;
                                    }
                            </tbody>                        
                        }            
                    </table>  
                    <br />
                    <div class="right">
                        @if (Login.AuthorizeSystemPermission(ResourcesHelper.System_Report, ResourcesHelper.Permission_Add))
                        {
                            <span class="btnPurple"><input type="button" value="@EM_Report.Domain.Resources.Resource.Action_AddNew" onclick="window.location = ('@Url.Action("Details", "DashboardLevel")')"/></span>
                        }                
                        @if (Login.AuthorizeSystemPermission(ResourcesHelper.System_Report, ResourcesHelper.Permission_Update))
                        {
                            <span class="btnPurple"><input type="button" id="cmdActive" value="@ResourcesHelper.Action_Active" /></span>
                            <span class="btnPurple"><input type="button" id="cmdInActive" value="@ResourcesHelper.Action_InActive" /></span>
                        }
                    </div>
                    <div class="Paging">
                    @if (!Model.IsNullOrEmpty())
                    {
                        @Html.Partial("_UCPaging")                                          
                    }            
                    </div>
                    @Html.Partial("_HiddenAction")
                </div>
            }
        </div>
   }   
</div>
}

