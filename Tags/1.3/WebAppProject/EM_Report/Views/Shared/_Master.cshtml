<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="@Url.Image("favicon.ico")" />      
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")"></script>
    <script language="javascript" type="text/javascript" src="@Url.Content("~/Scripts/MicrosoftAjax.js")"></script>
    <script language="javascript" type="text/javascript" src="@Url.Content("~/Scripts/MicrosoftMvcAjax.js")"></script>     
    @if (HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString().ToLower() == "subscription"
        && HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString().ToLower() != "index"
        || (HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString().ToLower() == "report"
            && HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString().ToLower() == "viewinfo"))
    {      
        <link href="@Url.Stylesheet("jquery/jquery.ui.core.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Stylesheet("jquery/jquery.ui.theme.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Stylesheet("jquery/jquery.ui.tabs.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Css/EML/calendar.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-ui-1.8.16.custom.min.js")" type="text/javascript"></script>        
    }
    <script src="@Url.Content("~/Scripts/jquery-v1.2.7.tools.min.js")" type="text/javascript"></script>     
    <link href="@Url.Stylesheet("main.css")" rel="stylesheet" type="text/css" />        
    <script src="@Url.Content("~/scripts/iMain.js")" type="text/javascript"></script>
    
    @if (HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString().ToLower() == "subscription"
        && HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString().ToLower() != "index"
        || (HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString().ToLower() == "report"
            && HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString().ToLower() == "viewinfo"))
    { 
        <link href="@Url.Content("~/css/EML/jquery/jquery.multiselect.css")" rel="stylesheet" type="text/css" />      
        <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.multiselect.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/AutocompleteUI.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/iSubscription.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/reportview.js")"></script>
    }    
    
    <script type="text/javascript">
        window.g_baseUrl = '@Url.Content("~")';
        window.g_baseUrl = window.g_baseUrl.substring(0, window.g_baseUrl.length - 1);
        window.g_TimeOut = @EM_Report.Helpers.Base.GetIntByConfigKey("LoadingReportTimeout");
    </script>      
</head>
<body>    
    <div id="main">
        @Html.Partial("_Header")
        <div class="Divider"></div>
        <div class="Container">                
            @Html.Partial("_Menu")
            <div id="content">                
                @RenderBody()
                @Html.Partial("_HackIE7")
            </div>
            <div class="ClearItem"></div>
        </div>
    </div>
    <div id="footer">Copyright 2011 ASWIG.IT REPORT. All rights reserved.</div>    
    @Html.Partial("_Dialog") 
    <div id="loading" class="loading" style="top: 119.7px; left: 571.5px; position: fixed; z-index: 10000; display: none;"><img src="@Url.Image("ajax-loader.gif")" alt="loading" width="200px" height="100%" /></div>
</body>
</html>