@model EM_Report.Models.LogInModel

@{    
    Layout = null;
    ViewBag.Title = "Log In";
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Log In</title>
		
    <link rel="shortcut icon" href="@Url.Image("favicon.ico")" />
    <script src="@Url.Content("~/scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script> 
	<script language="javascript" type="text/javascript">
	    $(document).ready(function () {
	        $('input:text:visible:first').focus();
	        $('input').keypress(function (e) {
	            if (e.which == 13) {
	                $('form').submit();
	            }
	        });
	    });
    </script>    	 
    <link href="@Url.Stylesheet("login.css")" rel="stylesheet" type="text/css" media="screen" />        
</head>
<body>
<div id="warp">
  <div id="login">
  	<div id="formContent">
        @using (Html.BeginForm("login", "account", FormMethod.Post, new { id = "frmLogin"}))
        {
            if (ViewData.ModelState["Error"] != null)
            {
                <span class="error"><strong>Error </strong>-  @ViewData.ModelState["Error"].Errors[0].ErrorMessage</span>                            
            } 
            <div>
                <label> <span> User Name:</span> </label> <br/> 
                    @Html.TextBoxFor(m => m.UserName, new { id = "txtUserName" })
                    @Html.ValidationMessageFor(m => m.UserName)   
              
                <label> <span> Password:</span> </label>  <br/> 
                    @Html.PasswordFor(m => m.Password, new { id = "txtPassword" })
                    @Html.ValidationMessageFor(m => m.Password)
         
                <p><label> <span> Remember me:</span> </label> @Html.CheckBoxFor(m => m.Is_RememberMe, new { id = "chkRememberMe" })</p>
                <div class="breakLine"></div>
                <p><span class="submit" ><input type="button" value="Log In" onclick="$('form').submit();" /></span> 
                    <span class="link"><a href="@VirtualPathUtility.ToAbsolute("~/account/resetpassword")">Forgot Your Password?</a></span></p>                        
            </div>
        }
    </div>
  </div>
</div>
</body>
</html>


