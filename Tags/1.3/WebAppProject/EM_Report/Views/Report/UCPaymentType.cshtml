@model IEnumerable<EM_Report.Models.Report_Data_Object.PaymentTypeModel>
@{
    Layout = null;
}

@using EM_Report.BLL.Commons;
@using EM_Report.Helpers;

<div class="Wrapper">
@using (Ajax.BeginForm("UCPaymentType", null, new AjaxOptions { UpdateTargetId = "searchPaymentType", OnBegin = "showLoadingPopup", OnComplete = "hideLoadingPopup" }, new { Id = "frmPaymentType" }))
{
    <div class="BoxHeader">
            <div class="SearchInput">
                @if (ViewBag.ShowClaimNumber == "true")
                {
                    <label>Claim number</label><input type="text" id="claimNumber" name="claimNumber" readonly="readonly" style="background-color: #DFDFDF" value="@ViewBag.ClaimNumber"  class="Popup"/>
                    <br />
                }
                <label>Payment type </label><input type="text" id="paymentType" name="paymentType" value="@ViewBag.PaymentType" class="Popup" />
                <label>Description</label><input type="text" id="paymentDescription" name="paymentDescription" value="@ViewBag.PaymentDescription" class="Popup" />
                 <input type="hidden" id="showClaimNumber" name="showClaimNumber"  value="@ViewBag.showClaimNumber" />
                <input id="btnSearch" type="image" title="Search" src="@Url.Image("btnSearch.png")"  />
            </div>                 
    </div>
    <div class="BoxContent">
        <table id="tbGrid" name="tbGrid" class="Grid">
            <thead>
			    <tr>
				    <th style="width: 30px;"><input type="checkbox" id="checkboxall" name="chkAll" /> </th>                               
				    <th>Payment Type</th>
					<th class="last-column">Description</th>                              
			    </tr>
		    </thead>
            @if (!ViewData.Model.IsNullOrEmpty())
            {
                var odd = true; 
				<tbody>
					@foreach (var item in Model)
     {
						<tr>
						    <td><input type="checkbox" name="chkItem" value="@(item.Type)" id="chkId@(item.Type)"/> </td>
                            <td title="@item.Type">@item.Type</td>									
						    <td class="last-column" title="@item.Description">@item.Description</td>
						</tr>                                   
                                                       odd = !odd;
     }
				</tbody>      
            }
		</table>
        <div class="Paging">
            @Html.Partial("_OkayCancel", new ViewDataDictionary { { "idSearchForm", "#searchPaymentType" }, { "policyform", "_HasPaymentTypeForm" } })
            @if (!ViewData.Model.IsNullOrEmpty())
            {
                 @Html.Partial("_UCPaging")                 
            }  
        </div>
        @Html.Partial("_HiddenAction")		
</div>
}
</div>
<script src="@Url.Content("~/scripts/iReport.js")" type="text/javascript"></script>
