@using EM_Report.Models

<div id="divFilter" class="LineWrapper SameLine" >
<div class="FilterSameLine">
    <label style="width: 35px;"> Field </label>
    <div class="WrapperSelectBox SelectForm" >
        <select name="field" class="form-field dropdown-parameter" onchange="changeInputType(this);">
           @* <option value="Date of Injury" type="datetime"> Date of Injury </option>
            <option value="Claim No" type="varchar"> Claim No </option>
            <option value="Is Open" type="bit"> Is Open </option>
            <option value="Year" type="int"> Year </option>*@
            @foreach (FilterItemModel item in ViewBag.Fields)
            {
                <option value="@item.FieldName" type="@item.DataType" >@item.HeaderName</option>
            }
        </select>
    </div>
</div>
<div class="FilterSameLine" style="width: 180px;">
    <label > Operator </label>
    <div class="WrapperSelectBox SelectForm" style="width: 100px;">    
        <select name="operator" class="form-field dropdown-parameter" style="width: 130px;">
            <option value="like" > Like </option>
            <option value="&#62;"> &#62; </option>
            <option value="&#62;&#61;"> &#62;&#61; </option>
            <option value="&#61;" > &#61; </option>
            <option value="&#60;"> &#60; </option>
            <option value="&#60;&#61;"> &#60;&#61; </option>
            <option value="&#60;&#62;"> &#60;&#62; </option>
        </select>
    </div>
</div>
<div class="FilterSameLineValue">   
        <label style="width: 40px;"> Value </label>
        <input name="txtValue" type="Text" class="Text" data-val-regex-pattern="^\d{1,9}?$" data-val="true">

        <input name="txtDatetime" type="Text" class="DatePicker-Schedule" style="display: none; width: 200px;"/>
        
        <input type="radio" name="bit"  value="1" style="display: none; height: 0px; float: left;"/> <label name="True" style="display: none">True</label>
        <input type="radio" name="bit" value="0" style="display: none; height: 0px; float: left;"/> <label name="False" style="display: none">False</label>
        
</div>    
<div class="FilterSameLine" style="width: 180px;">
    <label > Condition </label>
    <div class="WrapperSelectBox SelectForm" style="width: 100px;">    
        <select name="condition" class="form-field dropdown-parameter" style="width: 130px;">
            <option value="And" > And </option>
            <option value="Or" > Or </option>
            
        </select>
    </div>
</div>
<a id="btnRemoveFilter" class="CmdButton" title="Remove" style="background: url('../../images/eml/btnDelete.png') no-repeat" onclick="RemoveFilter(this);"> </a>

</div>
<script type = "text/javascript">
    $(document).ready(function () {
        changeFormType($("select[name=field] option").attr("type"), $("select[name=field] option").parent().parent().parent().parent().children());
    });
</script>

